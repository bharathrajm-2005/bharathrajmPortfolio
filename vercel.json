{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "devCommand": "npm run dev",
  "env": {
    "SMTP_HOST": "@smtp_host",
    "SMTP_PORT": "@smtp_port", 
    "SMTP_USER": "@smtp_user",
    "SMTP_PASS": "@smtp_pass",
    "CONTACT_EMAIL": "@contact_email"
  },
  "functions": {
    "app/api/send-email/route.ts": {
      "maxDuration": 10000
    }
  }
}
